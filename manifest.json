{
    "manifest_version": 3,
    "name": "Tab Board",
    "version": "0.1.0",
    "description": "Tab Board",
    "action": {
      "default_popup": "src/popup.html"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["src/content.js"]
        }
    ],
    "permissions": [
        "activeTab",
        "tabs",
        "storage",
        "scripting",
        "contextMenus",
        "http://*/*",
        "https://*/*",
        "<all_urls>"
    ],
    "host_permissions": [
        "<all_urls>",
        "http://*/*",
        "https://*/*"
    ],
    "background": {
        "service_worker": "src/background.js"
    }
  }