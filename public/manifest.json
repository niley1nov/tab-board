{
	"manifest_version": 3,
	"name": "Tab Board",
	"version": "1.0.0",
	"description": "Visualize and organize tabs with our Chrome extension for smarter workflows!",
	"action": {
		"default_popup": "index.html"
	},
	"icons": {
		"128": "logo.png",
		"48": "logo.png",
		"32": "logo.png",
		"16": "logo.png"
	},
	"permissions": [
		"activeTab",
		"tabs",
		"storage",
		"scripting",
		"contextMenus",
		"http://*/*",
		"https://*/*",
		"<all_urls>"
	],
	"host_permissions": ["<all_urls>", "http://*/*", "https://*/*"],
	"background": {
		"service_worker": "background/background.js"
	}
}
